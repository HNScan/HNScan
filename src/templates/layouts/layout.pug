// Include our mixins as the very first thing
include ../mixins/index.pug
doctype html
html(lang="en")
  head
    include ../includes/meta.pug
    title HNScan | Block Explorer for Handshake
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.4.2/css/all.css', integrity='sha384-/rXc/GQVaYpyDdyxK+ecHPVYJSN9bmVFBvjA/9eOB+pb3F2w2N6fc5qB9Ew5yIns', crossorigin='anonymous')
    link(href="https://fonts.googleapis.com/css?family=Nunito:400,600" rel="stylesheet")
    link(rel='stylesheet', type='text/css', href='/css/main.css')

  body
    include ../includes/navbar
    input#theme(type="checkbox")
    block content
    // Footer
    include ../includes/footer.pug

    script(type='text/javascript', src='/js/main.min.js', async)

    - const gaCode = outputGA();
    if (gaCode != "")
      script( async src=`https://www.googletagmanager.com/gtag/js?id=${gaCode}`)
      script.
        var code = `#{gaCode}`;
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', code);



